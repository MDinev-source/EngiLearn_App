<!DOCTYPE html>
@{ Layout = "/Views/Shared/_Layout.cshtml"; }
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/css/authorization.css" asp-append-version="true" />
</head>
<body>
